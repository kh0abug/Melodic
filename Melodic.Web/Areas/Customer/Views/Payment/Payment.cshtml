<script>
    function formatCardNumber(input) {
        // Loại bỏ tất cả các ký tự không phải là số từ giá trị nhập vào
        let cardNumber = input.value.replace(/\D/g, '');

        // Định dạng số thẻ theo "0000 0000 0000 0000"
        cardNumber = cardNumber.replace(/(\d{4})(\d{4})(\d{4})(\d{4})/, '$1 $2 $3 $4');

        // Cập nhật giá trị trường nhập liệu
        input.value = cardNumber;
    }

</script>
	<div>
		<div class="form">
				<div class="separator">
				<hr class="line">
				<h1>PAYMENT</h1>
				<hr class="line">
	   </div>
        <div class="row">
            <div class="col-md-3"></div>
            <form asp-controller="Payment" asp-action="AddPayment" method="post" class="card-info col-md-6 ">
                <div>
                    <div class="input_container">
                        <label class="input_label">Card holder name</label>
                        <input class="input_field" type="text" name="fullname" placeholder="Enter your full name" required>
                    </div>
                    <div class="input_container">
                        <label class="input_label">Card Number</label>
                        <input class="input_field" type="text" name="cardnumber" id="cardnumber" placeholder="0000 0000 0000 0000" oninput="formatCardNumber(this);" required>
                    </div>
                    <div class="input_container">
                        <label class="input_label">Expiry Date / CVV</label>
                        <div class="split">
                            <input class="input_field" style="width: 250px;" type="text" name="exdate" placeholder="01/23" required>
                            <input class="input_field" style="width: 110px;" type="number" name="cvv" placeholder="CVV" required>
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="checkout col" style="cursor: pointer;">
                        <span>Confirm</span>
                    </button>
                </div>
            </form>

          
           
            <div class="col-md-3"></div>
            </div>
    </div>
</div>
			
	


