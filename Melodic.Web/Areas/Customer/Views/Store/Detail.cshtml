@using Melodic.Domain.Entities;
@model Speaker

<link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
<div class="bg-b--crumb">
    <div class="container b-crumb-contaier">
        <!-- Breadcrumb -->
        <nav class="d-flex">
            <h6 class="mb-0">              
                <a class="b-crumb-item" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door detail-icon"></i>&nbsp; Home</a>
                <span class="text-black-50 mx-2 fw-bolder">/</span>
                <a class="b-crumb-item" asp-area="" asp-controller="Store" asp-action="Index"><i class="bi bi-shop detail-icon"></i>&nbsp; Store</a>
                <span class="text-black-50 mx-2 fw-bolder">/</span>
                <a href="" class="b-crumb-item"><i class="bi bi-speaker detail-icon"></i>&nbsp; Detail</a>
                <span class="text-black-50 mx-2 fw-bolder">/</span>
                <a href="" class="b-crumb-item is-active" >@Model.Name</a>
            </h6>
        </nav>
        <!-- Breadcrumb -->
    </div>
</div>


<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-7">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
   
                        <img style="max-width: 70%; max-height: 60vh; margin: auto;" class="rounded-4 fit" src="@Model.Img" />                 
                </div>


                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-5">
                <div class="ps-lg-3">
                    <h4 class="detail-name">
                        @Model.Name <br />
                        
                    </h4>
                

                    <div class="mb-3">
                        <span class="fw-light">Price: </span>
                        <span class="h5" style="color: #f04e27">@Model.Price</span>
                        <span class="text-muted">/per box</span>
                    </div>

                    <p>
                        @Model.Decription.
                    </p>

                    <div class="row">
                        <dd class="col-2">Brand:</dd>
                        <dt class="col-10">@Model.Brand.Name</dt>
                    </div>
                   
                    <br />
                    <hr />

                 <br />
                    <a href="#" class="btn btn-primary shadow-0" style=" box-shadow: -1px 3px 9px 0px rgba(0, 0, 0, 0.35);"><i class="bi bi-cart4"></i> Add to cart </a>

                </div>
            </main>
        </div>
    </div>
    <div style=" border-top: 1px solid;"></div>
    <div class="row" style="margin: 10px 15px;">
        <h1>Similar Items</h1>
        @foreach (var speaker in ViewBag.Brands)
        {
            <div class="col-lg-3 col-md-6 col-sm-6 ">

                <div class="card my-2 shadow-0" style="max-height: 565px; max-width: 250px;  box-shadow: -1px 3px 9px 0px rgba(0, 0, 0, 0.35);">
                    <a href="#" class="">

                        <img src="@speaker.Img" style="max-height: 259px;" class="card-img-top rounded-2" />
                    </a>
                    <div class="card-body p-0 pt-3">
                        <a style="width: 100%" class="btn buy-btn"><i class="bi bi-cart3 fw-bold" onclick="AddToCart(@speaker.Id)">&nbsp; Add To Card</i></a>
                        <br>
                        <h5 class="card-title">
                            <a asp-controller="Store" asp-action="Detail" asp-route-id="@speaker.Id" class="text-decoration-none ellipsis-text-name" style="color: black; margin-left: 15px;  ">@speaker.Name</a>
                        </h5>

                        <h6 style="margin-left: 15px;"><span class="fw-lighter">Price: </span><span style="color: #f04e27">@speaker.Price</span></h6>
                        <p class="home-des" style=" display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis; margin-left: 15px;">@speaker.Decription</p>
                        <p class="">
                            <span class="text-muted" style="margin-left: 15px;">Brands: </span>@speaker.Brand.Name
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<script>

    function AddToCart(id) {
        $.ajax({
            type: 'POST',
            url: '/Customer/Cart/AddToCart',
            data: {
                id: id
            },
            success: function (response) {
                if (response.success) {

                } else {

                }
            }
            ,
            error: function () {
                alert("An error occurred while adding the product to the cart.");
            }
        });
    }


</script>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="">@Model.Name</h2>
            </div>
        </div>
        <div class="row">

            <div class="col-md-6">
                <img src="@Model.Img" class="img-fluid" alt="Product Image">
            </div>
            <div class="col-md-6">

                <p>@Model.Decription</p>
                <p>Brand: @Model.Brand?.Name</p>
                <p>$ @Model.Price</p>
                <p>Stock Availability: In Stock</p>
                <a class="btn btn-primary shadow-0 me-1 icon_1"><i class="bi bi-cart3" onclick="AddToCart(@Model.Id)"></i></a>



            </div>
        </div>
    </div>
</body>

