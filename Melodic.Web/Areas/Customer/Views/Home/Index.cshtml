            url: '/Customer/Cart/AddToCart',
            data: {
                id: id
            },
            success: function (response) {
                if (response.success) {

                } else {

                }
            }
            ,
            error: function () {
                alert("An error occurred while adding the product to the cart.");
            }
        });
    }


