@using Melodic.Web.Areas.Customer.ViewModel;
@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}


<!-- Link Swiper's CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<!-- Demo styles -->
<link rel="stylesheet" href="~/css/home.css" />

<section class="section home" style="border: solid 2px black; margin-bottom: 10px;">
    <!-- Swiper -->
    <div class="home-content ">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    <img src="~/images/homepage/loahomepage1.webp" alt="speaker-img" class="home-img">
                    @*    <h4 class="homeSubtitle">What U want obuy</h4>
                    <h2 class="homeTitle">Melodic Sotre</h2> *@
                </div>
                <div class="swiper-slide">
                    <img src="~/images/homepage/loahomepage2.webp" alt="speaker-img" class="home-img">
                    @*    <h4 class="homeSubtitle">What U want obuy</h4>
                    <h2 class="homeTitle">Melodic Sotre</h2> *@
                </div>

            </div>
            @*  <div class="swiper-button-next  swiper-navbtn"></div>
            <div class="swiper-button-prev  swiper-navbtn"></div> *@
            <div class="swiper-pagination"></div>
        </div>
    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script src="js/swiper_home.js"></script>
</section>
@* newest *@
<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>New products</h3>
        </header>

        <div class="row">
            @foreach (var speaker in Model.Speakers)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">

                    <div class="card my-2 shadow-0">
                        <a href="#" class="">
                            <div class="mask" style="height: 50px;">
                                <div class="d-flex justify-content-start align-items-start h-100 m-2">
                                    <h6><span class="badge bg-danger pt-1">New</span></h6>
                                </div>
                            </div>
                            <img src="@speaker.Img" class="card-img-top rounded-2"/>
                        </a>
                        <div class="card-body p-0 pt-3">
                            <a style="width; 100%" class="btn btn-primary shadow-0 me-1 icon_1"><i class="bi bi-cart3" onclick="AddToCart(@speaker.Id)">Buy</i></a>
                            <br>
                            @* <a href="#!" class="btn btn-light border px-2 pt-2 float-end icon-hover"><i class="fas fa-heart fa-lg px-1 text-secondary"></i></a> *@
                            <h5 class="card-title">
                                <a asp-controller="Store" asp-action="Detail" asp-route-id="@speaker.Id" class="text-decoration-none ellipsis-text-name" style="color: black  ">@speaker.Name</a>
                            </h5>
                            
                            <h6>@speaker.Price</h6>
                            <p class="home-des" style=" display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;">@speaker.Decription</p>
                            <p class="text-muted">
                               Brands: @speaker.Brand.Name
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

