@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<style>
    .reset-btn:hover{
        background-color: red;
        font-weight: bold;
        border: solid 1px #f04e27;
    }
</style>
<h1 class="text-center">@ViewData["Title"]</h1>

<hr />
<div class="row">
   
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>Enter your email!!</h3>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            <button type="submit" class="w-100 btn btn-lg btn-outline-primary reset-btn">Reset Password</button>
        </form>
        <br />
        <h5 class="float-end"><a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-arrow-left-short"></i>Back to Login</a></h5>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
