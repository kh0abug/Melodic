@model Brand

<div class="col-lg-8">
    <div class="card">
        <div class="card-header">
            <strong>Delete Brand</strong>
        </div>
        <div class="card-body card-block">
            <form method="post" class="form-horizontal">
                <input asp-for="Id" hidden />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Name" class=" form-control-label">Name</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Name" disabled class="form-control">
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <div class="col-6 col-md-3 py-3 mx-auto">
                        
                            <button class="btn btn-dark form-control rounded-4 shadow " type="submit">
                                Delete
                            </button>
                        
                    </div>
                    <div class="col-6 col-md-3 py-3 mx-auto">
                        <a asp-action="Index" class="btn btn-outline-warning form-control rounded-4 shadow">
                            Return
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

