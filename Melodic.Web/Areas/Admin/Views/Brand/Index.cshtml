@model PaginatedList<Brand>

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Managements</a></li>
                            <li class="active">Brand</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <div>
                            <strong class="card-title">Brand</strong>
                        </div>
                        <div>
                            <a asp-action="CreateAndUpdate" class="btn btn-outline-dark">
                                <i class="bi bi-plus-circle"></i>  Create New Brand
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {

                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>@item.Name</td>
                                        <td style="width:20%;">
                                            <div style="display:flex;justify-content:space-evenly">
                                                <a asp-action="CreateAndUpdate" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                                    <span class="ti-eraser text-white"> Edit</span>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <span class="ti-pencil-alt text-white"> Delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                     @*     @{
                             var previous = !Model.HasPrevious ? "disabled" : "";
                             var next = !Model.HasNext ? "disabled" : "";
                         } *@
                        <p>Page @Model.PageIndex / @Model.TotalPages</p>
                        <ul class="pagination" id="pagination"></ul>

                    </div>

                    <form hidden id="page-form" asp-action="Index" method="get">
                        <input id="page-index" name="pageNumber" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
        <partial name="_CustomPaging" />
}