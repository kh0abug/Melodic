@model PaginatedList<Brand>

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Managements</a></li>
                            <li class="active">Brand</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <div>
                            <strong class="card-title">Brand</strong>
                        </div>
                        <div>
                            <a asp-action="CreateAndUpdate" class="btn btn-outline-dark">
                                <i class="bi bi-plus-circle"></i>  Create New Brand
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>@item.Name</td>
                                        <td style="width:20%;">
                                            <div style="display:flex;justify-content:space-evenly">
                                                <a asp-action="CreateAndUpdate" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                                    <span class="ti-eraser text-white"> Edit</span>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <span class="ti-pencil-alt text-white"> Delete</span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                        @{
                            var previous = !Model.HasPrevious ? "disabled" : "";
                            var next = !Model.HasNext ? "disabled" : "";
                        }
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-default @previous">
                            Previous
                        </a>
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-default @next">
                            Next
                        </a>
                        <nav aria-label="...">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                @for(int x = 1; x <= Model.TotalPage; x++)
                                {
                                <li class="page-item">
                                        <a class="page-link @(x==x ? "active" : "")" asp-action="Index" asp-route-pageNumber="@x">
                                            @x
                                        </a>
                                </li>
                                }
                                @* <li class="page-item active" aria-current="page">
                                    <a class="page-link" href="#">2</a>
                                </li> *@
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    @* <form method="post" hidden>

                    </form> *@
                </div>
            </div>
        </div>
    </div>
</div>

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>