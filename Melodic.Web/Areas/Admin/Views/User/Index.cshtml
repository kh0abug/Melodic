@using Melodic.Infrastructure.Identity;
@using Melodic.Application.ExtensionMethods;
@model PaginatedList<ApplicationUser>
@{
    ViewData["Title"] = "User management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Managements</a></li>
                            <li class="active">Users</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {

                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>
                                            
                                            <button value="@item.Id" class="delete-button btn btn-danger btn-sm">
                                                <span class="ti-eraser text-white"></span>
                                            </button>

                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                        <p>Page @Model.PageIndex / @Model.TotalPages</p>
                        <ul class="pagination" id="pagination"></ul>
                    </div>
                    <form hidden id="page-delete" method="post" asp-action="Delete">
                        <input id="current-id" name="id" />
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_CustomPaging" />
    }
}
