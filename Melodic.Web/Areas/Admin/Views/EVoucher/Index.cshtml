@model PaginatedList<EVoucher>

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Managements</a></li>
                            <li class="active">EVoucher</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header" style="display:flex;justify-content:space-between">
                        <div>
                            <strong class="card-title">EVoucher</strong>
                        </div>
                        <div>
                            <a asp-action="CreateAndUpdate" class="btn btn-outline-dark">
                                <i class="bi bi-plus-circle"></i>  Create New EVoucher
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Percent</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.VouncherName</td>
                                        <td>@item.Code</td>
                                        <td>@item.Percent %</td>
                                        <td>@item.Description</td>
                                        <td style="width:20%;">
                                            <div style="display:flex;justify-content:space-evenly">
                                                <a asp-action="CreateAndUpdate" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                                    <span class="ti-pencil-alt text-white t"> Edit</span>
                                                </a>
                                                <button value="@item.Id" class="delete-button btn btn-danger btn-sm">
                                                    <span class="ti-eraser text-white"> Delete</span>
                                                </button>
                                            </div>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <p>Page @Model.PageIndex / @Model.TotalPages</p>
                        <ul class="pagination " id="pagination"></ul>
                    </div>
                    <form hidden id="page-delete" method="post" asp-action="Delete">
                        <input id="current-id" name="id" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_CustomPaging" />
    }
}