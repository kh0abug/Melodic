@model SpeakerViewModel

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>@(Model.Speaker.Id != 0 ? "Update" : "Add") Speaker</strong>
        </div>

        <div class="card-body card-block">
            <form method="post" enctype="multipart/form-data" class="form-horizontal">
                <input asp-for="Speaker.Id" hidden />
                <input asp-for="Speaker.Img" hidden />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.Name" class=" form-control-label">Name</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Speaker.Name" placeholder="Enter Speaker's Name" class="form-control">
                        <span asp-validation-for="Speaker.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.Price" class=" form-control-label">Price</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Speaker.Price" placeholder="Enter Price" class="form-control">
                        <span asp-validation-for="Speaker.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.Decription" class=" form-control-label">Description</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <textarea asp-for="Speaker.Decription" placeholder="Enter Description" class="form-control" rows="5" autocomplete="off"></textarea>
                        <span asp-validation-for="Speaker.Decription" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.UnitInStock" class=" form-control-label">Quantity</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Speaker.UnitInStock" placeholder="Enter Quantity" class="form-control">
                        <span asp-validation-for="Speaker.UnitInStock" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.Brand" class=" form-control-label">Brand</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="@Model.Speaker.BrandId" asp-items="@Model.BrandList" class="form-control">
                            <option disabled selected>--Select Brand--</option>
                        </select>
                        <span asp-validation-for="Speaker.BrandId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group d-flex align-items-center">
                    <div class="col col-md-3">
                        <label asp-for="Speaker.Img" class=" form-control-label">Image</label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input type="file" name="file" class="form-control-file border-3" autocomplete="off" accept="image/*">
                    </div>
                    @if (Model.Speaker.Id != 0)
                    {
                    <div class="col-12 col-md-3 ">
                        <img src="@Model.Speaker.Img" width="60%"
                             style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                    }
                </div>

                <div class="card-footer d-flex justify-content-center">
                    <div class="col-6 col-md-3 py-3 mx-auto">
                        @if (Model.Speaker.Id != 0)
                        {
                            <button class="btn btn-outline-light form-control rounded-4 shadow" type="submit">
                                Update
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-light form-control rounded-4 shadow " type="submit">
                                Add
                            </button>
                        }
                    </div>
                    <div class="col-6 col-md-3 py-3 mx-auto">
                        <a asp-action="Index" class="btn btn-outline-warning form-control rounded-4 shadow">
                            Return
                        </a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}