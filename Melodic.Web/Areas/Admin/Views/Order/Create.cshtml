@model Melodic.Domain.Entities.Order

@{
    ViewData["Title"] = "Create Order";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body card-block">
            <form method="post" class="form-horizontal">
                <input asp-for="Id" value="" />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Id" class=" form-control-label">Code</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Id" class="form-control">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Created" class="form-control-label">Create date</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Created" class="form-control">
                        <span asp-validation-for="Created" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Address" class=" form-control-label">Address</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Address" class="form-control">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="PhoneNumber" class=" form-control-label">Phone</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Total" class=" form-control-label">Total</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Total" class="form-control">
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="FullName" class=" form-control-label">FullName</label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <div class="col-6 col-md-3 py-3 mx-auto">


                        <button class="btn btn-outline-light form-control rounded-4 shadow " type="submit">
                            Add
                        </button>
                    </div>
                    <div class="col-6 col-md-3 py-3 mx-auto">
                        <a asp-action="Index" class="btn btn-outline-warning form-control rounded-4 shadow">
                            Return
                        </a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
