<script>
    $(document).ready(function () {
        $('#pagination').twbsPagination({
            totalPages: @Model.TotalPages,
            visiblePages: 3,
            currentPage: @Model.PageIndex,
            prev: '‹',
            next: '›',
            onPageChange: function (num) {
                if (this.currentPage != num) {
                    $('#page-index').val(num),
                        $('#page-form').submit()
                }
            }
        });
    })
</script>
